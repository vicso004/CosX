<% @posts.each do |post| %>
  <h2><%= post.title %></h2>
  <i>Skrivet <%= post.created_at.strftime("%e/%m, %Y")%></i>
  <p><%= post.body%></p>
  <% if can? :manage, post %>
  <p>
      <%= link_to 'Editera', edit_post_path(post), :class => 'btn btn-mini' %>      

      <%= link_to "Ta bort",
                  post_path(post),
                  :method => :delete,
                  :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Är du säker?')),
                  :class => 'btn btn-mini btn-danger' %>
    </p>
    <% end %>
<% end %>
