<%= simple_form_for @match, :html => { :class => 'form-horizontal' } do |f| %>
<div class="controll-group string" style="margin-bottom:10px;">
    

  <%= f.label :datum %>
  <%= f.text_field :datum %>
  </div>

  
      <div class="field">
  <%= f.label :player_ids, "Spelare" %><br />
  <%= f.collection_select :player_ids, Player.order(:name).where(:active => true), :id, :name, {}, {multiple: true} %>
</div>

  <%= f.input :tid, :input_html=>{:class => 'input-time'} %>
  <%= f.input :other_team %>
  <%= f.input :score_other %>
  <%= f.collection_select :season, @seasons, :id, :full_name %>
  <div class="form-actions">
    <%= f.submit "Skapa", :class => 'btn-primary' %>
    <%= link_to "Avbryt", matches_path, :class => 'btn' %>
  </div>
<% end %>
