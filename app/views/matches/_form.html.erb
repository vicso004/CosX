<%= simple_form_for @match, :html => { :class => 'form-horizontal' } do |f| %>
<div class="controll-group string" style="margin-bottom:10px;">    

  <%= f.label :datum %>
  <%= f.text_field :datum %>
  </div>

  
      <div class="controll-group string">      
	
  <%= f.label :player_ids, "Spelare", :style => "width: 140px;" %>
  <%= f.collection_select :player_ids, @players, :id, :name, {}, {multiple: true} %>
</div>

  <%= f.input :tid, :input_html=>{:class => 'input-time'} %>
  <%= f.input :other_team, :label => "Motståndarlag" %>

  <%= f.input :season_id, :collection => @seasons, :label => "Säsong" %>
  
  <h2>Mål</h2>
    <%= f.input :score_other, :label => "Motståndarlagets mål"  %>
  
   <%= f.fields_for :goals do |builder| %>
          <%= render 'goal_fields', f: builder %>        
       <% end %>
  <%= link_to_add_fields "Lägg till mål", f, :goals %>
  
  <div class="form-actions">
    <%= f.submit "Skapa", :class => 'btn-primary' %>
    <%= link_to "Avbryt", matches_path, :class => 'btn' %>
  </div>
<% end %>
