<%= form_for @article, :html => {:multipart => true} do |f| %>

 <div class="form-inputs">
    <%= f.label :title, 'Titel' %> 
    <%= f.text_field :title, :class => 'textfield' %>   
<br/>
	<%= f.label :content, 'Beskrivning' %>   
    <%= f.text_area :content %>
  </div>

<div class="form-inputs">

        <%= f.fields_for :assets do |builder| %>
          <%= render 'asset_fields', f: builder %>        
       <% end %>
      
      <%= link_to_add_fields "LÃ¤gg till bild", f, :assets %>

</div>
<br />
<% @article.assets.each do |asset| %>
<%= image_tag asset.image.url(:thumb)%>
  
<%end%>
                
<div class="form-actions">
    <%= f.submit "Skapa", :class => 'btn btn-primary' %>     
  		<%= link_to "Avbryt",
                articles_path, :class => 'btn' %>
</div>                 



<% end %> 
