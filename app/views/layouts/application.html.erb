<!DOCTYPE html>
<html>
<head>
  <title>CosX</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	
	
	
	
	
	
	<div class="navbar">
	  <div class="navbar-inner">
	    <div class="container">
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
			          <span class="icon-bar"></span>
			          <span class="icon-bar"></span>
			          <span class="icon-bar"></span>
			        </a>
			        <a class="brand" href="#">Some Store</a>
			        <div class="nav-collapse">
			          <ul class="nav">
			            <li><%= link_to "Spelare", players_path %></li>
			<li class="divider-vertical"></li>
			            <li><%= link_to "Matcher", matches_path %></li>
			            <li><%= link_to "Säsonger", seasons_path %></li>
						<!--<li><%= link_to "Resultat",  %></li>-->
			          </ul>
					<form class="navbar-search pull-left">
					  <input type="text" class="search-query" placeholder="Search">
					</form>
					<ul class="nav pull-right">
					  <li class="dropdown">
					    <a href="#"
					          class="dropdown-toggle"
					          data-toggle="dropdown">
					          Konto
					          <b class="caret"></b>
					    </a>
					    <ul class="dropdown-menu">
					      	<% if current_user %>
						
							    <%= image_tag current_user.avatar_url, :alt =>"avatar" %>
							<li class="divider"></li>
							 	<li><%= link_to "Logga ut", destroy_user_session_path, :method => :delete%></li>
							  <% else %>
							   <li> <%= link_to "Logga in", user_omniauth_authorize_path(:facebook) %></li>
							    <% end %>
					    </ul>
					  </li>
					</ul>
			        </div>
			      </div>
	    </div>
	  </div>
	</div>
	
	<!-- flash messages -->	

	<% flash.each do |name, message| %>
	<% if name == :notice %>
		<div id="flash" class="alert-message success fade in" data-alert="alert">
			<a class="close" href="#">×</a>
	<% elsif name == :warning %>
		<div id="flash" class="alert-message warning fade in" data-alert="alert">
			<a class="close" href="#">×</a>
	<% elsif name == :alert %>
		<div id="flash" class="alert-message error fade in" data-alert="alert">
			<a class="close" href="#">×</a>
	<% else %>
		<div id="flash">	
	<% end %>

			<%= message %>
		</div>
	<% end %>
	
	
	<!-- main container -->
	<div class="container-fluid">
	  <div class="row-fluid">
	    <div class="span10">
	      <!--body content-->
	<%= yield %>
	    </div>
	    <div class="span2">
	      <!--sidebar content-->
	<h2>hejsan</h2>
	<p>Lorem ipsum</p>

	  </div>
	</div>

</body>
</html>
