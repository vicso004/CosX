<h1>Säsonger</h1>

<table>
  <tr>
    <th>Period</th>
    <th>År</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @seasons.each do |season| %>
  <tr>
    <td><%= season.period %></td>
    <td><%= season.year %></td>
    <td><%= link_to 'Editera', edit_season_path(season), :class => 'btn btn-mini' %></td>
    <td><%= link_to 'Ta bort', season, confirm: 'Är du säker?', method: :delete,:class => 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %>
</table>

